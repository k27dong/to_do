<h4> Todo List </h4>

<%= link_to '<button type="button">New</button>'.html_safe, new_todo_path %> <br><br>

<table>
  <tr>
    <th>Title    </th>
    <th>Content    </th>
    <th>Deadline  </th>
    <th colspan="3"></th>
  </tr>

  <% @todos.each do |todo| %>
    <tr>
      <td> <%= todo.title%>  </td>
      <td> <%= todo.content%>  </td>
      <td> <%= todo.ddl.strftime("%m/%d, %Y")%> </td>
      <td> <%= link_to '<button type="button">Show</button>'.html_safe, todo_path(todo) %> </td>
      <td> <%= link_to '<button type="button">Edit</button>'.html_safe, edit_todo_path(todo) %> </td>
      <td> <%= link_to '<button type="button">Delete</button>'.html_safe, todo_path(todo),
        method: :delete,
        data: { confirm: 'sure?' }%> </td>
      <td> &nbsp; &nbsp; <%= todo.ddl.strftime("%A")%> </td>
    </tr>
  <% end %>
</table>