<h4> Todo List </h4>

<%= link_to '<button type="button">New</button>'.html_safe, new_todo_path %> <br><br>

<table>
  <tr>
    <th>Title    </th>
    <th>Content    </th>
    <th>Deadline  </th>
    <th colspan="3"></th>
  </tr>

  <% @todos.each do |todo| %>
    <tr>
      <td> <%= todo.title%>  </td>
      <td> <%= todo.content%>  </td>
      <td> <%= todo.ddl.strftime("%m/%d, %Y")%> </td>
      <td> <%= link_to '<button type="button">Show</button>'.html_safe, todo_path(todo) %> </td>
      <td> <%= link_to '<button type="button">Edit</button>'.html_safe, edit_todo_path(todo) %> </td>
      <td> <%= link_to '<button type="button">Done</button>'.html_safe, todo_path(todo),
        method: :delete,
        data: { confirm: 'sure?' }%> </td>
      <td> &nbsp; &nbsp; <%= todo.ddl.strftime("%A")%> </td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to '<button type="button">Main Page</button>'.html_safe, controller: 'welcome'%> &nbsp; | &nbsp;
<% if signed_in? %>
  <%= link_to '<button type="button">Sign Out</button>'.html_safe, signout_path, method: "delete" %> &nbsp; | &nbsp;
<% else %>
<%= link_to '<button type="button">Sign In</button>'.html_safe, new_session_path%> &nbsp; | &nbsp;
<% end %>
<%= link_to '<button type="button">Sign Up</button>'.html_safe, signup_path%>  <br><br>

<%# user options%>
<% if signed_in? %>
<li><%= link_to '<button type="button">Profile</button>'.html_safe, @current_user%> </li> 
<li> <%= link_to '<button type="button">Setting</button>'.html_safe, '#'%> </li>
<% end %>

